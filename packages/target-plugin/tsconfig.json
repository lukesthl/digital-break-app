{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",

    "lib": ["es2020"],
    "module": "node16",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
  },
  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"],
}
